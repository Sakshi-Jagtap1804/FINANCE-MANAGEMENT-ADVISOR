    <span>FINANCE ADVISOR</span>
    </a>
    <div class="navbar-nav">
        <a href="/PAGES/Blog Pages/blog.html" class="nav-link">Blog</a>
        <a href="/PAGES/financial-calculator.html" class="nav-link">Financial Calculators</a>
        <a href="/PAGES/Investment Types.html" class="nav-link">Investment Types</a>
        <a href="\DB _c\mongose\index.html" class="nav-link">Plan</a>
        <a href="/PAGES/Aboutus.html" class="nav-link">About Us</a>
        <a href="#" class="nav-link">Login</a>
    </div>
</div>

<div class="login-container">
    <div class="box">
        <h1>Login Form</h1>

        <form action="/login" method="post">
            <input placeholder="Name" name="name" type="text">
            <br>
            <input placeholder="Password" name="password" type="password">
            <br>
            <input class="sub" type="submit">
            <h3>Don't have an account?</h3>
            <a href="/signup">Create a new account</a>
        </form>
    </div>
</div>
<script>
document.getElementById("loginForm").addEventListener("submit", function(event) {
    event.preventDefault(); // Prevent default form submission

    // Make an AJAX request to submit the form data
    fetch("/login", {
        method: "POST",
        body: new FormData(document.getElementById("loginForm"))
    })
    .then(response => {
        if (response.ok) {
            // If login is successful, display alert and redirect
            alert("Login successful!");
            window.location.href = "http://127.0.0.1:5502/index.html"; // Redirect to home page
        } else {
            // If login fails, handle error
            alert("Incorrect username or password.");
        }
    })
    .catch(error => {
        console.error("Error:", error);
    });
});
</script>

</body>
